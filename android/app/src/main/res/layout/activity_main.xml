<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상태: 대기"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtPackage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/package_hint"
            android:inputType="text"
            android:autofillHints="username"/>
        <Button
            android:id="@+id/btnPickApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_app"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/edtInputText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="텍스트"/>
        <Button
            android:id="@+id/btnAddInputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_input_text"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Scroll until text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/edtScrollText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="텍스트"/>
        <EditText
            android:id="@+id/edtScrollMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/max_swipes"
            android:inputType="number"/>
        <CheckBox
            android:id="@+id/chkScrollDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dir_down"
            android:checked="true"/>
        <Button
            android:id="@+id/btnAddScrollText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/scroll_until_text"/>
    </LinearLayout>

    <!-- Find by image label (content description) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/edtImageLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="콘텐츠 설명(이미지 라벨)"/>
        <Button
            android:id="@+id/btnAddFindImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/add_find_image"/>
    </LinearLayout>

    <!-- Find by screenshot template (naive) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/edtTemplateThreshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/threshold"/>
        <Button
            android:id="@+id/btnPickTemplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_image"/>
        <Button
            android:id="@+id/btnAddTemplateStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="템플릿 스텝 추가"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/edtSwipeXY1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="x1,y1"/>
        <EditText
            android:id="@+id/edtSwipeXY2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="x2,y2"/>
        <EditText
            android:id="@+id/edtSwipeDur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ms"/>
        <Button
            android:id="@+id/btnAddSwipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_swipe"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <Button
            android:id="@+id/btnOpenAccessibility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/open_accessibility" />
        <Button
            android:id="@+id/btnLaunch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/launch_target" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <CheckBox
            android:id="@+id/chkAutoPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앱 실행 후 자동 재생" />
        <CheckBox
            android:id="@+id/chkRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복" />
        <EditText
            android:id="@+id/edtRepeatCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="횟수(0=무한)"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edtRepeatDelay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="딜레이 ms"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/edtSleepMs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="대기(ms)"/>
        <Button
            android:id="@+id/btnAddSleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_sleep"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/edtWaitText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="텍스트"/>
        <EditText
            android:id="@+id/edtWaitTimeout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/timeout_ms"
            android:inputType="number"/>
        <Button
            android:id="@+id/btnAddWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_text"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <Button
            android:id="@+id/btnExport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/export" />
        <Button
            android:id="@+id/btnImport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/import" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <Button
            android:id="@+id/btnRecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/record" />
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/play" />
        <Button
            android:id="@+id/btnStep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/step" />
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/clear" />
        <Button
            android:id="@+id/btnViewSteps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/view_steps" />
    </LinearLayout>

</LinearLayout>
