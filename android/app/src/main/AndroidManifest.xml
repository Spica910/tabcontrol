<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autopilot">

    <queries>
        <!-- allow querying launcher activities on API 30+ -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoPilot">

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".capture.ScreenCaptureService"
            android:exported="false" />

        <activity
            android:name=".picker.AppPickerActivity"
            android:exported="false"
            android:label="@string/pick_app" />

        <activity
            android:name=".ui.ScenarioEditorActivity"
            android:exported="false"
            android:label="@string/view_steps" />

        <service
            android:name=".service.AutoPilotService"
            android:enabled="true"
            android:exported="false"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/service_config" />
        </service>

        <service
            android:name=".service.IntentRelay"
            android:enabled="true"
            android:exported="false" />

        <!-- Quick Settings Tile (Android 7+) -->
        <service
            android:name=".tiles.QuickTileService"
            android:label="AutoPilot"
            android:icon="@mipmap/ic_launcher"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- App Widget Provider -->
        <receiver
            android:name=".widget.PlayWidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_play_info" />
        </receiver>

    </application>
</manifest>
